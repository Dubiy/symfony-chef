[program:<%= @name %>]
command=<%= @command %>
process_name=<%= @name %>-%(process_num)s
numprocs=<%= @number %>
user=<%= @user %>
autostart=true
autorestart=true
stdout_logfile=/var/log/supervisor/<%= @name %>-%(process_num)s.stdout.log
stdout_logfile_backups=3
stderr_logfile=/var/log/supervisor/<%= @name %>-%(process_num)s.stderr.log
stderr_logfile_backups=3
environment=REDIS_BACKEND="<%= @backend %>", <% if defined?(@queue) %>QUEUE="<%= @queue %>", <% end %><% if defined?(@app_include) && @app_include %>APP_INCLUDE="<%= @app_include %>", <% end %><% if defined?(@prefix) && @prefix %>PREFIX="<%= @prefix %>", <% end %><% if node[:resque][:verbose] %>VVERBOSE="1"<% end %>
